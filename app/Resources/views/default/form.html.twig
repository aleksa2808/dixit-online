{{ form_start(form, {'action': path('create-room'), 'method': 'POST', 'attr': {'class': "ajax", 'id': "createRoomForm"}}) }}
<div class="modal-body">
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_row(form.name, {'attr': {'class': "form-control", 'placeholder': "game name"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.maxMembers, {'attr': {'class': "form-control", 'placeholder': "max players (4-6)"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.password, {'attr': {'class': "form-control", 'placeholder': "password (optional)"}}) }}
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    {{ form_widget(form.submit, {'attr': {'class': "btn btn-primary", 'id': "createRoomConfirm"}}) }}
</div>
{{ form_end(form) }}